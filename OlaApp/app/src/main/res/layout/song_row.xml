<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="6dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <RelativeLayout
        android:id="@+id/song_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Placeholder image to be changed -->

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_fast_forward" />

        <TextView
            android:id="@+id/list_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/poster_image"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/poster_image"
            android:paddingBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authors_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/list_song_name"
            android:layout_alignStart="@+id/list_song_name"
            android:layout_below="@+id/list_song_name"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>